<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/wechat_pay_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查微信版本是否支持支付" />

    <Button
        android:id="@+id/wechat_pay_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务端签名微信支付(测试APP_ID)" />

    <Button
        android:id="@+id/wechat_pay_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信支付(使用demo->debug_keystore)" />

    <TextView
        android:id="@+id/pay_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>