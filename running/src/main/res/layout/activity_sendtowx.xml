<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/wechat_openid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入openid" />

        <CheckBox
            android:id="@+id/wechat_ifsendtofh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:clickable="true"
            android:text="是否分享至朋友圈" />

        <Button
            android:id="@+id/wechat_send_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送文本" />

        <Button
            android:id="@+id/wechat_send_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送图片" />

        <Button
            android:id="@+id/wechat_send_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送音乐" />

        <Button
            android:id="@+id/wechat_send_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送视频" />

        <Button
            android:id="@+id/wechat_send_webpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送网页" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/wechat_fav_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收藏图片" />

        <Button
            android:id="@+id/wechat_fav_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收藏文件" />


        <EditText
            android:id="@+id/wechat_scope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入scope" />

        <Button
            android:id="@+id/wechat_get_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取微信访问Token" />

        <Button
            android:id="@+id/wechat_unregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从微信反注册" />

    </LinearLayout>

</ScrollView>