<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">


    <ImageView
        android:id="@+id/item_left_menu_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sdk_black_24dp" />

    <TextView
        android:id="@+id/item_left_menu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_left_menu_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/item_left_menu_img"
        android:singleLine="true"
        android:text="聚合云平台数据"
        android:textSize="@dimen/left_menu_text_size" />

</RelativeLayout>