<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送到微信" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入openId" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送文本" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送图片" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送音乐" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送视频" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送网页" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送app消息" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送文件" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送表情消息" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入scope" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取微信访问Token" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从微信反注册" />

    </LinearLayout>

</ScrollView>